/* TAG STYLES */

html { font-family: <%= font %>; font-size: 100%; }
body { position: relative; color: #222233; background: #ffeeee; }
 pre { font-family: monospace; color: white; }
 pre { margin: 10px 0; padding: 10px 0; width: 550px; }
 pre code { padding:10px 10px; }
  td { text-align: left; vertical-align: top; }
   p { text-align: justify; font-size: 100%; line-height: 150%; margin: 0 0 1.2em 0; }
  li { padding: 3px 0; line-height: 150%; }
   a { color: <%= color.darker %>; text-decoration: none; }
   a:hover { text-decoration: underline; }

body { color: black; background: #fff; }
pre { border-color: #444; }

ol, ul { list-style: square; margin-left: 24px; }

/* headers */

h1 { margin: 5px; }
h2, h3, h4, h5, h6 { margin: 1.5em 0 1em 0; }
h1 { font-size: 200%; }
h2 { font-size: 150%; }
h3 { font-size: 120%; }
h4 { font-size: 100%; }


