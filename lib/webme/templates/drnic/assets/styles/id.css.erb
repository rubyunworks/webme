/* CLASS STYLES */

<% color_text = color.foreground %>
<% color_high = color.lighter %>
<% color_link = color.opposite.darker %>

/*------------------ LAYOUT ------------------*/

/* #header .title */

#header { width: 100%; position: relative; }

.title { width: 720px; margin: 0 auto; padding: 30px 0; }
.title ul { padding-left: 10px; }

.download {
  height: 120px; float: right;
  margin-top: 10px; padding: 10px 30px;
  border: 4px solid;
  -moz-border-radius: 20px;
  border-radius: 20px;
}

/* #nav .menu */

#nav { position: fixed; padding: 20px; right: 0; top: 80px; width: 200px;
  border-top: 4px solid; border-left: 4px solid; border-bottom: 4px solid;
  -moz-border-radius-topleft: 20px; -webkit-border-top-left-radius: 20px;
  -moz-border-radius-bottomleft: 20px; -webkit-border-bottom-left-radius: 20px;
}

.menu { margin: 0 auto; text-align: left; }
.menu ul { list-style-type: none; margin: 0px; padding: 0px; width: 100%; position: relative; }
.menu ul li { margin: 15px 10px 15px 0; line-height: 20px; }
.menu ul li a { border-top: 0 solid; }

/* #main .doc */

#main { width: 100%; padding: 0px; }

.doc { width: 720px; margin: 0 auto; padding: 20px 0 10px 0; min-height: 890px; }
.doc h2 { border-left: 0px solid; padding-left: 0; }
.doc h2 img { margin: 0 0 0 0; }
.doc h3 { border-bottom: 1px dotted; }

/* #footer .copyright */

#footer { width: 100%; }

.copyright { width: 720px; margin: 0 auto; margin-top: 20px; padding: 20px 0px 35px 0px; }

/*------------------ FONT ------------------*/

/* #header .title */

.title { font-size: 80%; }
.title h1 { font-size: 450%; font-weight: bold; }

.download { font-size: 150%; text-align: center; }
.download h1 { font-size: 64px; }
.download h1 a:hover { text-decoration: none; }

/* #main .doc */

.doc { }
.doc a { font-size: 100%; }
.doc a:hover { text-decoration: underline; }
.doc h2 { font-size: 2em; font-weight: bold; }
.doc h3 { font-style: italic;}

/* #nav .menu */

#nav { background: <%= color_high %>; border-color: <%= color_link %>; }

.menu { text-align: left; }
.menu ul li a { font-family: sans-serif; font-weight: bold; text-decoration: none; }
.menu ul li a:hover { text-decoration: underline; }
.menu ul li a:active { text-decoration: underline; }

/* #footer .copyright */

.copyright { font: bold .8em sans-serif; }


/*------------------ COLOR ------------------*/

.title h1 { color: <%= color_text %>; }
.title pre { background: transparent; }

.download {
  background: <%= color_high %>;
  border-color: <%= color_link %>;
  color: <%= color.darker %>;
}

.download a { color: <%= color_link %>; }

.menu ul { background: transparent; }
.menu ul li a { color: <%= color_link %>; border-color: <%= color_high %>; }

/* #main .doc */

.doc { }
.doc a { color: <%= color_link %>; }
.doc a:hover { }
.doc p { color: <%= color_text %>; }
.doc h2 { color: <%= color_text %>; border-color: <%= color_high %>; }
.doc h3 { border-color: <%= color_high %>; }

/* #footer .copyright */

.copyright { color: <%= color_high; }

