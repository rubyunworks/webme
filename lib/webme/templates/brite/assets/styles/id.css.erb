*/

/* topmenu */

#topmenu {
  padding-top: 5px;
}

#topmenu .inner {
  margin: 0 auto;
  width: 500px;
  height: 42px;
  padding-top: 10px;
}

#topmenu ul {
  list-style: none;
  margin: 0;
}

#topmenu li {
  float: left;
  line-height: 23px;
  width: 75px;
  border-left: 1px solid #ccc;
}

#topmenu a {
  line-height: 20px;
  text-align: left;
  padding: 5px 10px;
  /* border-left: 1px solid #ccc; */
}

/* sections */

#sections { position: fixed; padding: 16px 0 16px 16px; right: 0; top: 20px; width: 200px;
  border-top: 4px solid; border-left: 4px solid; border-bottom: 4px solid;
  -moz-border-radius-topleft: 20px; -webkit-border-top-left-radius: 20px;
  -moz-border-radius-bottomleft: 20px; -webkit-border-bottom-left-radius: 20px;
}

#sections .inner { padding: 10px; text-align: left; background: <%= color.lighter %>;
  -moz-border-radius-topleft: 10px; -webkit-border-top-left-radius: 10px;
  -moz-border-radius-bottomleft: 10px; -webkit-border-bottom-left-radius: 10px;
}

#sections .inner ul { list-style-type: none; margin: 0px; padding: 0px; width: 100%; position: relative; }
#sections .inner ul li { margin: 10px 0 10px 0; line-height: 20px; }
#sections .inner ul li a { border-top: 0 solid; }

/* footer */

#footer {
  width: 100%;
  padding: 20px 0;
  border-top: 1px solid #ccc;
  margin-top: 30px;
}

#footer .inner {
  width: 960px;
  margin: 0 auto;
  text-align: left;
}


/* FONT */

/* -----------------------------------------------------------------

  This is where you set your desired font size. The line-heights
  and vertical margins are automatically calculated from this.
  The percentage is of 16px (0.75 * 16px = 12px).

----------------------------------------------------------------- */

#header .title {
  font-size: 64px;
  line-height: 1em;
  font-weight: bold;
  padding: 20px;
}

#header .inner {
  text-align: left;
}

#topmenu {
  text-align: center;
}

#topmenu li {
  text-align: center;
}

#topmenu a {
  font-size: 1.5em;
  font-style: normal;
}

#footer {
  font-size: 1.4em;
  font-weight: bold;
}



/* COLOR */

#header {
  background: url(../images/bkg.jpg) 0px 0px repeat-x <%= color %>;
  color: white;
}

#header .menu a {
  font-weight: bold;
}

#header .menu a:hover {
  color: #222;
  font-weight: bold;
  text-decoration: underline;
}

#topmenu {
  border-bottom: 2px solid #ccc;
}

#topmenu a {
  background: white;
}

#topmenu li {
  border-color: #ccc;
}

#topmenu li:hover {
  background: #ccc;
}

#footer {
  color: #777;
}

