/* CLASS STYLES */

/* LAYOUT */

/* main */

#doc { width: 960px; margin: 0 auto; }

.main { }


/* header */

#header {
  border-bottom: 2px solid #ccc;
  margin-bottom: 40px;
}

#header .inner {
  width: 960px;
  margin: 0 auto;
  padding: 10px;
}

#header .logo {
  padding: 5px;
  margin: -20px 10px 0 -30px;
}

/* side */

/*
