<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<HTML>
<HEAD>
  <TITLE><%= title %></TITLE>

  <LINK rel="shortcut icon" href="assets/images/ruby.png"/>

  <LINK type="text/css" rel="stylesheet" href="assets/styles/reset.css" />
  <LINK type="text/css" rel="stylesheet" href="assets/styles/tag.css" />
  <LINK type="text/css" rel="stylesheet" href="assets/styles/id.css" />
  <LINK type="text/css" rel="stylesheet" href="assets/styles/class.css" />

  <SCRIPT language="javascript" type="text/javascript" src="assets/scripts/jquery.js"></SCRIPT>
  <SCRIPT language="javascript" type="text/javascript" src="assets/scripts/highlight.js"></SCRIPT>

  <SCRIPT type="text/javascript">
    $(document).ready(function() {
      $('pre').wrapInner('<code></code>');
      hljs.tabReplace = '    ';
      hljs.initHighlightingOnLoad('ruby');
    });
  </SCRIPT>

  <LINK type="text/css" rel="stylesheet" href="assets/styles/highlight.css" />
</HEAD>
<BODY>

<div id="header">
<div class="centered">
  <div class="title">
    <h1><%= title %></h1>
  </div>
</div>
</div>

<div class="main">
<div class="centered">
  <table width="100%">
  <tr><td>
    <div id="doc">
      <p><%= description %></p><br/>
      &nbsp; &nbsp; <a href="#" onclick="$('#readme').toggle();">Toggle README</a>
    </div>
  </td><td>
    <div id="nav">
      <ul>
        <% if documentation %>
          <li><a href="<%= documentation %>">Documentation</a></li>
        <% end %>
        <% if api %>
          <li><a href="<%= documentation %>">API Docs</a></li>
        <% end %>
        <% if wiki %>
          <li><a href="<%= wiki %>">Wiki Wiki</a></li>
        <% end %>
        <% if forum %>
          <li><a href="<%= forum %>">Web Forum</a></li>
        <% end %>
        <% if mailinglist %>
          <li><a href="<%= mailinglist %>">Mailing List</a></li>
        <% end %>
        <% if download %>
          <li><a href="<%= download %>">Download</a></li>
        <% end %>
        <% if development %>
          <li><a href="<%= development %>">Development</a></li>
        <% end %>
      </ul>
    </div>
  </td></tr>
  </table>
</div>
</div>

<div id="readme" style="display: none;">
<div class="centered"
  <%= body %>
</div>
</div>

<div id="footer">
<div class="centered">
  <div class="advert">
    <%= advert %>
  </div>
  <div class="copyright">
    <%= copyright %> <%= maintainer || authors.first %> |
    Website generated by <a href="http://proutils.github.com/webme">webme</a> -t splash.<br/>
  </div>
</div>
</div>

</BODY>
</HTML>

