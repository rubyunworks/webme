<HTML>
<HEAD>
  <TITLE><%= title %></TITLE>

  <META NAME="description" CONTENT="<%= description %>"> 

  <LINK rel="shortcut icon" href="assets/images/ruby.png"/>

  <LINK type="text/css" rel="stylesheet" href="assets/reset.css" />
  <LINK type="text/css" rel="stylesheet" href="assets/custom.css" />

  <SCRIPT language="javascript" type="text/javascript" src="assets/jquery.js"></SCRIPT>
  <SCRIPT language="javascript" type="text/javascript" src="assets/highlight.js"></SCRIPT>

  <SCRIPT type="text/javascript">
    $(document).ready(function() {
      $('pre').wrapInner('<code></code>');
      hljs.tabReplace = '    ';
      hljs.initHighlightingOnLoad('ruby');
    });
  </SCRIPT>

  <LINK type="text/css" rel="stylesheet" href="assets/highlight.css" />
</HEAD>
<BODY>

<div id="header">
<div class="centered">
  <div class="title">
    <h1><%= title %></h1>
  </div>
</div>
</div>

<div class="main">
<div class="centered">
  <table width="100%">
  <tr><td>
    <div id="doc">
      <p><%= description %></p><br/>
      <a href="#" onclick="$('#readme').toggle();">Toggle README</a>
    </div>
  </td><td>
    <div id="nav">
      <ul>
        <% resources.each do |name, url| %>
          <% next if name =~ /^home/ %>
          <% if url %>
            <li><a href="<%= url %>"><%= name %></a></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </td></tr>
  </table>
</div>
</div>

<div id="readme" style="display: none;">
<div class="centered">
  <%= render(project.readme_file) %>
</div>
</div>

<div id="footer">
<div class="centered">
  <div class="advert">
    <!-- TODO: %= advert % -->
  </div>
  <div class="copyright">
    <%= copyright %> <%= authors.first %> |
    Website generated by <a href="http://proutils.github.com/webme">webme -t clean</a><br/>
  </div>
</div>
</div>

</BODY>
</HTML>

