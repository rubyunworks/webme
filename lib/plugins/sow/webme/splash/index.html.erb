<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<HTML>
<HEAD>
  <TITLE><%= title %></TITLE>

  <LINK rel="shortcut icon" href="assets/images/ruby.png"/>

  <LINK type="text/css" rel="stylesheet" href="assets/styles/reset.css" />
  <LINK type="text/css" rel="stylesheet" href="assets/styles/custom.css" />

  <SCRIPT language="javascript" type="text/javascript" src="assets/scripts/jquery.js"></SCRIPT>
  <SCRIPT language="javascript" type="text/javascript" src="assets/scripts/highlight.js"></SCRIPT>

  <SCRIPT type="text/javascript">
    $(document).ready(function() {
      $('pre').wrapInner('<code></code>');
      hljs.tabReplace = '    ';
      hljs.initHighlightingOnLoad('ruby');
    });
  </SCRIPT>

  <LINK type="text/css" rel="stylesheet" href="assets/styles/highlight.css" />
</HEAD>
<BODY>

<div id="header">
  <div class="centered">
    <div class="title">
      <h1><%= title %></h1>
    </div>
  </div>
</div>

<div class="main">
  <table width="100%">
  <tr><td>
    <div id="doc">
      <p><%= description %></p><br/>
      <a href="#" onclick="$('#readme').toggle();">Toggle README</a>
    </div>
  </td><td>
    <div id="nav">
      <ul>
        <% if resources.documentation %>
          <li><a href="<%= resources.documentation %>">Documentation</a></li>
        <% end %>
        <% if resources.api %>
          <li><a href="<%= resources.api %>">API Docs</a></li>
        <% end %>
        <% if resources.wiki %>
          <li><a href="<%= resources.wiki %>">Wiki Wiki</a></li>
        <% end %>
        <% if resources.forum %>
          <li><a href="<%= resources.forum %>">Web Forum</a></li>
        <% end %>
        <% if resources.mailinglist %>
          <li><a href="<%= resources.mailinglist %>">Mailing List</a></li>
        <% end %>
        <% if resources.download %>
          <li><a href="<%= resources.download %>">Download</a></li>
        <% end %>
        <% if resources.development %>
          <li><a href="<%= resources.development %>">Development</a></li>
        <% end %>
      </ul>
    </div>
  </td></tr>
  </table>
</div>

<div id="readme" style="display: none;">
  <div class="centered"
    <%= Malt.render(:file=>project.readme_file) %>
  </div>
</div>

<div id="footer">
  <div class="advert">
    <%= advert %>
  </div>
  <div class="copyright">
    <%= copyright %> - <%= authors.first %> |
    Website generated by <a href="http://proutils.github.com/webme">webme</a> -t splash.<br/>
  </div>
</div>

</BODY>
</HTML>

